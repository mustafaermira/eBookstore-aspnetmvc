@model Genre

@{
    ViewData["Title"] = "Delete Genre";
}
<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Delete confirmation for @Model.GenreName</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                    
                    <div class="form-group">
                        <label asp-for="GenreName" class="control-label"></label>
                        <input asp-for="GenreName" class="form-control" readonly/>
                        <span asp-validation-for="GenreName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" readonly/>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <form asp-action="Delete" >
                            <input type="hidden" asp-for="Id" />
                            <input type="submit" value="Confirm" class="btn btn-danger float-right"/>
                        </form>
                        <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                    </div>
            </div>
        </div>

    </div>
</div>
